<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_togri_javoblar"
    android:layout_width="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    app:cardElevation="8dp"
    app:strokeWidth="2dp"
    app:cardCornerRadius="20dp"
    app:strokeColor="@color/teal_200"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/savolNomeri"
            android:gravity="center"
            android:textColor="?android:attr/textColorPrimary"
            android:textStyle="normal"
            android:textSize="20sp"
            android:text="Nomer"/>


        <TextView
            android:id="@+id/togriJavobText"
            android:text="Jalol"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:id="@+id/buttonA"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:id="@+id/buttonB"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:id="@+id/buttonC"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/togriJavobKorsatish"
            android:text="Sizning javobingiz "
            android:textSize="14sp"
            android:textColor="?android:attr/textColorPrimary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/togriJavobKorsatish2"
            android:text="Togri javob "
            android:textSize="14sp"
            android:textColor="?android:attr/textColorPrimary"/>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>